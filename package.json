{
  "name": "@rimori/playwright-testing",
  "version": "0.3.7",
  "description": "Playwright testing utilities for Rimori plugins and workers",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rimori-org/playwright-testing.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w --preserveWatchOutput -p tsconfig.json",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:headed:debug": "playwright test --headed --debug"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "peerDependencies": {
    "@playwright/test": "^1.40.0",
    "@rimori/client": "^2.5.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@rimori/client": "^2.5.13",
    "@types/node": "^20.12.7",
    "rimraf": "^5.0.7",
    "typescript": "^5.7.2"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  }
}
